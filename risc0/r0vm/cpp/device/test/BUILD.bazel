load("//bazel/rules/cc:defs.bzl", "cc_test")
load("//bazel/toolchain/risc0:defs.bzl", "risc0_cc_binary")

risc0_cc_binary(
    name = "test_fail",
    srcs = ["test_fail.cpp"],
    deps = ["//risc0/r0vm/cpp/device"],
)

risc0_cc_binary(
    name = "test_mem",
    srcs = ["test_mem.cpp"],
    deps = ["//risc0/r0vm/cpp/device"],
)

risc0_cc_binary(
    name = "test_memcpy",
    srcs = ["test_memcpy.cpp"],
    deps = ["//risc0/r0vm/cpp/device"],
)

risc0_cc_binary(
    name = "test_sha",
    srcs = ["test_sha.cpp"],
    deps = ["//risc0/r0vm/cpp/device"],
)

cc_test(
    name = "test",
    srcs = ["test.cpp"],
    data = [
        "test_fail",
        "test_mem",
        "test_memcpy",
        "test_sha",
        "//risc0/r0vm/rust/device:test_fail",
        "//risc0/r0vm/rust/device:test_mem",
        "//risc0/r0vm/rust/device:test_sha",
    ],
    tags = ["exclusive"],
    deps = [
        "//risc0/core/test:gtest_main",
        "//risc0/zkp/prove",
    ],
)
